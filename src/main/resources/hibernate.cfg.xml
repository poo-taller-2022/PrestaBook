<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.sqlite.hibernate.dialect.SQLiteDialect</property>
		<property name="hibernate.connection.driver_class">org.sqlite.JDBC</property>
		<property name="hibernate.connection.url">jdbc:sqlite:src/main/resources/prestabook.db</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		<property name="show_sql">false</property>
		<property name="hibernate.current_session_context_class">thread</property>
		<mapping class="ar.edu.uner.prestabook.model.AreaTematica" />
		<mapping class="ar.edu.uner.prestabook.model.Alumno" />
		<mapping
			class="ar.edu.uner.prestabook.model.CodigoIdentificatorio" />
		<mapping class="ar.edu.uner.prestabook.model.Coleccion" />
		<mapping class="ar.edu.uner.prestabook.model.Docente" />
		<mapping class="ar.edu.uner.prestabook.model.Edicion" />
		<mapping class="ar.edu.uner.prestabook.model.Ejemplar" />
		<mapping class="ar.edu.uner.prestabook.model.Formato" />
		<mapping class="ar.edu.uner.prestabook.model.Funcionario" />
		<mapping class="ar.edu.uner.prestabook.model.Lector" />
		<mapping class="ar.edu.uner.prestabook.model.Multa" />
		<mapping class="ar.edu.uner.prestabook.model.Obra" />
		<mapping class="ar.edu.uner.prestabook.model.Prestamo" />
		<mapping class="ar.edu.uner.prestabook.model.TipoObra" />


	</session-factory>
</hibernate-configuration>